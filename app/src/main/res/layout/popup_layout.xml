                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_id13"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/bt_id12"
