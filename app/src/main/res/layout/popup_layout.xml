                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/bt_id3"
                        android:background="@drawable/text_shape"
                        android:text="性感"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_id5"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/bt_id4"
                        android:background="@drawable/text_shape"
                        android:text="简约"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/bt_id6"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/text_shape"
                        android:text="文艺"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_id7"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/bt_id6"
                        android:background="@drawable/text_shape"
                        android:text="名媛"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_id8"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/bt_id7"
                        android:background="@drawable/text_shape"
                        android:text="轻熟"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_id9"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/bt_id8"
                        android:background="@drawable/text_shape"
                        android:text="运动风"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_id10"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/bt_id9"
                        android:background="@drawable/text_shape"
                        android:text="嘻哈街头"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#acabab"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/circle_hot_topic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/imageView11"
                        android:layout_toRightOf="@+id/imageView11"
                        android:text="场景"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView11"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:textSize="12sp"
                        android:text="选择你喜欢的场景" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/iv_id"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/imageView12"
                            android:layout_alignParentBottom="true"
                            android:layout_alignStart="@+id/imageView12"
                            android:background="#9000"
                            android:gravity="center"
